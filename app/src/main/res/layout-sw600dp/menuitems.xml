<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/menuitems"
    android:gravity="top">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:background="@color/menubar">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.25dp"
            android:background="@color/menuseparator"
            android:alpha="0.4" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/menuitem_settings"
            android:layout_gravity="left|top"
            android:layout_marginLeft="26dp"
            android:clickable="true"
            android:background="@drawable/settings"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="1dp" />

        <View
            android:layout_below="@id/menuitem_settings"
            android:layout_toRightOf="@+id/menuitem_settings"
            android:layout_height="0.25dp"
            android:layout_width="wrap_content"
            android:background="@color/menuseparator"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="16dp"
            android:alpha="0.4"
            android:id="@+id/view3" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/menuitem_about"
            android:layout_gravity="left"
            android:clickable="true"
            android:background="@drawable/info"
            android:layout_below="@id/menuitem_settings"
            android:layout_alignLeft="@+id/menuitem_settings"
            android:layout_alignStart="@+id/menuitem_settings"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="1dp" />

        <View
            android:layout_below="@id/menuitem_about"
            android:layout_toRightOf="@+id/menuitem_about"
            android:layout_height="0.25dp"
            android:layout_width="wrap_content"
            android:background="@color/menuseparator"
            android:layout_marginRight="0dp"
            android:layout_marginLeft="16dp"
            android:alpha="0.4"
            android:id="@+id/view2" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/menuitem_feedback"
            android:layout_gravity="left|top"
            android:clickable="true"
            android:layout_below="@id/menuitem_about"
            android:background="@drawable/feedback"
            android:layout_alignLeft="@+id/menuitem_settings"
            android:layout_alignStart="@+id/menuitem_settings"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="1dp" />

        <View
            android:layout_below="@id/menuitem_feedback"
            android:layout_height="0.25dp"
            android:layout_width="wrap_content"
            android:background="@color/menuseparator"
            android:layout_marginRight="0dp"
            android:alpha="0.4"
            android:id="@+id/view" />

        <Button
            android:layout_width="match_parent"
            android:layout_below="@id/menuitem_feedback"
            android:layout_height="60dp"
            android:id="@+id/btn_homepage"
            android:background="@color/menubar"
            android:text="@string/homepage"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            style="?android:attr/borderlessButtonStyle"
            android:layout_marginTop="4dp"
            android:textSize="20sp" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/btn_feedback"
            android:background="@color/menubar"
            android:text="@string/feedback"
            android:textColor="@android:color/white"
            android:layout_below="@+id/view2"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            style="?android:attr/borderlessButtonStyle"
            android:layout_alignBottom="@+id/menuitem_feedback"
            android:layout_marginLeft="10dp"
            android:gravity="center|left"
            android:layout_marginTop="1dp"
            android:textSize="35sp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/btn_about"
            android:background="@color/menubar"
            android:text="@string/about"
            android:textColor="@android:color/white"
            android:gravity="center|left"
            android:layout_below="@+id/view3"
            android:layout_alignLeft="@+id/view2"
            android:layout_alignStart="@+id/view2"
            android:layout_above="@+id/view2"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="10dp"
            android:textSize="35sp" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:id="@+id/btn_settings"
            android:background="@color/menubar"
            android:text="@string/settings"
            android:textColor="@android:color/white"
            android:gravity="center|left"
            android:layout_above="@+id/menuitem_about"
            android:layout_alignTop="@+id/menuitem_settings"
            android:layout_marginTop="1dp"
            android:textSize="35sp"
            android:layout_alignLeft="@+id/view3"
            android:layout_alignStart="@+id/view3"
            android:layout_marginLeft="10dp" />

    </RelativeLayout>
</RelativeLayout>